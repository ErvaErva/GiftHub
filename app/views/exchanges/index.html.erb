<div id="content">
  <h1>Exchanges</h1>
  <div class="container">
    <h3>Open</h3>
    <% @open_exchanges.each do |exchange| %>
      <div class="open">
        <p><%= exchange.name %></p>
        <div class="thumbnail">
          <img alt= <%= exchange.name %> src= <%= exchange.thumburl %> />
        </div>
      </div>
    <% end %>
  </div>
  <div class="container">
    <h3>Past</h3>
    <% @past_exchanges.each do |exchange| %>
      <div class="past">
        <p><%= exchange.name %></p>
        <div class="thumbnail">
          <img alt= <%= exchange.name %> src= <%= exchange.thumburl %> />
        </div>
      </div>
    <% end %>
  </div>
</div>